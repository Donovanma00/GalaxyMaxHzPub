<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:colorControlActivated">@color/design_default_color_primary</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextAppearance</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/design_default_color_primary</item>
    </style>

    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>


    <style name="cardViewStyle" parent="CardView">
        <item name="android:background">@drawable/rounded_edge</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/horizontal_spacing</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_spacing</item>
        <item name="android:layout_marginTop">@dimen/vertical_spacing</item>
        <item name="android:layout_marginBottom">@dimen/vertical_spacing</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:elevation">4dp</item>
    </style>


    <style name="topTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart" tools:targetApi="o">12dp</item>
        <item name="android:layout_marginEnd" tools:targetApi="o">20dp</item> <!--To offset icon width-->
        <item name="android:layout_marginVertical" tools:targetApi="o">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="chipStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checkable">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MySeekBarTheme" parent="Widget.AppCompat.SeekBar" >
        <item name="android:colorAccent">@color/primary_color</item>
        <item name="android:progressTint">@color/primary_color</item>
        <item name="android:progressBackgroundTint">@color/primary_color</item>
    </style>


    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>  # Required for animated icons

        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/AppTheme</item>  # Required.
    </style>

    <style name="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

